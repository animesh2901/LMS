@model LMS.Models.Users.U2Login


@{
}

<div class="container-fluid">
    <div class="row main-content bg-success text-center">
        <div class="col-md-4 text-center company__info">
            <h2><span class="fa fa-android"></span></h2>
            <img src="~/multimedia/gif/lms.gif" class="rounded-circle" />
            <h4 class="company_title">Learning Management System</h4>
        </div>
        <div class="col-md-8 col-xs-12 col-sm-12 login_form ">
            <div class="container-fluid">
                <div class="row">
                    <h2>Log In</h2>
                </div>
                <div class="row">
                    <form method="post" action="Dashboard" control="" class="form-group">
                        <div class="row">
                            <input type="text" id="txt_username" class="form__input" placeholder="Email" asp-for="Username">
                        </div>
                        <div class="row">
                            <!-- <span class="fa fa-lock"></span> -->
                            <input type="password" name="password" id="txt_password" class="form__input" placeholder="Password" asp-for="Password">
                        </div>
                        <div class="row">
                            <label style="position:inherit;">
                                <button type="submit" class="btn">Submit</button>
                                <button type="reset" class="btn">Cancel</button>
                                <input type="checkbox" checked="checked" name="remember"> Remember me
                            </label>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
